{
  "name": "@nostd/lib",
  "version": "0.0.0",
  "description": "Non-standard standart libabry for JavaScript / TypeScript",
  "scripts": {
    "test": "ava",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project ./tsconfig.json",
    "build:esm": "tsc --project ./tsconfig.json --target ES2019 --module ESNext --outDir './lib/esm'",
    "lint:staged": "lint-staged --no-stash",
    "size": "npm run build:esm && size-limit"
  },
  "entries": [
    "math/divmod"
  ],
  "keywords": [
    "std",
    "stdlib",
    "typescript",
    "standard library"
  ],
  "author": "Stanislav Sysoev <@d4rkr00t>",
  "license": "MIT",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.4.5",
    "ava": "^3.7.1",
    "lint-staged": "^10.1.7",
    "nyc": "^15.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "size-limit": "^4.4.5",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "size-limit": [
    {
      "path": "./lib/esm/math/divmod.js",
      "limit": "45 B"
    }
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint:staged"
  ],
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "nyc": {
    "per-file": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "cache": true,
    "all": true
  }
}
